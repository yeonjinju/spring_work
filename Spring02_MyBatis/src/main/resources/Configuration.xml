<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
  <configuration>
  	<!-- 자주 사용하는 type 의 별칭을 등록 해놓고 Mapper xml 에서 사용할 수 있다. -->
  	<typeAliases>
  		<typeAlias type="com.gura.spring02.guest.dto.GuestDto" alias="guestDto"/>
  	</typeAliases>
  
  	<!-- sql 문을 작성한 Mapper xml 문서가 어디에 있는지 목록을 작성해야 한다. -->
  	<mappers>
  		<mapper resource="mapper/MemberMapper.xml"/>
  		<mapper resource="mapper/GuestMapper.xml"/>
  	</mappers>
  </configuration> 
  